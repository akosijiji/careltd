<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:background="#f0b803"
        android:padding="5dp" >
        
        <Button 
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
            android:text="@string/back"
            android:textColor="#987b05"
            android:background="@drawable/custom_button" />
        
        <Button 
            android:id="@+id/btFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:layout_alignParentTop="true"
        	android:layout_alignParentRight="true"
            android:textColor="#987b05"
            android:background="@drawable/custom_button" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btFilter"
            android:layout_alignBottom="@+id/btFilter"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:drawableLeft="@drawable/view_small"
            android:textStyle="bold"
            android:text="@string/view" />
        
    </RelativeLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="#eedb8d" >
        
        <TextView 
            android:id="@+id/tvHighest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/highest"
            android:layout_weight="1" />
        
        <TextView 
            android:id="@+id/tvLowest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lowest"
            android:layout_weight="1" />
        
        <TextView 
            android:id="@+id/tvMostRecent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mostrecent"
            android:layout_weight="1" />
        
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
